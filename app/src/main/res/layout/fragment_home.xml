<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#323030"
    tools:context=".HomeFragment">


    <TextView
        android:id="@+id/textView4"
        android:layout_width="365dp"
        android:layout_height="136dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="196dp"
        android:text="¡Bienvenido a la Aplicación para tomar fotos de las citaciones de la Agencia Nacional de Tránsito (ANT) en el Gobierno Autónomo Descentralizado (GAD) de Riobamba!"
        android:textAlignment="center"
        android:textColor="#FFFEFE"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="371dp"
        android:layout_height="125dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="540dp"
        android:text="Esta aplicación ha sido diseñada para simplificar y agilizar el proceso de registro de citaciones de tránsito emitidas por la ANT en la ciudad de Riobamba."
        android:textAlignment="center"
        android:textColor="#FFFEFE"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view"
        android:layout_width="171dp"
        android:layout_height="171dp"
        android:layout_marginStart="120dp"
        android:layout_marginBottom="252dp"
        android:foreground="@drawable/citacionesant"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/view2"
        android:layout_width="328dp"
        android:layout_height="99dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="588dp"
        android:foreground="@drawable/logo2023"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>